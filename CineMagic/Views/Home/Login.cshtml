@model CineMagicAPI.Models.Login
@{
    ViewData["Title"] = "Giriş Yapın";
}

<!DOCTYPE html>
<html>
<body>
    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12" style="">
                    <h3 class="" style="">
                        <div style="text-align: left;"><span style="text-align: center; font-family: -apple-system, BlinkMacSystemFont, &quot;Segoe UI&quot;, Roboto, &quot;Helvetica Neue&quot;, Arial, sans-serif, &quot;Apple Color Emoji&quot;, &quot;Segoe UI Emoji&quot;, &quot;Segoe UI Symbol&quot;; background-color: rgb(0, 0, 0);">CineMagic'e Giriş Yapın!</span></div>
                    </h3><i class="fa fa-cog fa-spin fa-3x fa-fw"></i>
                </div>
            </div>
        </div>
    </div>
    @if (ViewBag.ErrorMessage != null)
    {
        <p>@ViewBag.ErrorMessage</p>
    }
    <div class="container">
        <div class="row">
        </div>
    </div>
    <div class="py-4 bg-light" style="background-image: linear-gradient(rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.8)); background-position: left top; background-size: 100%; background-repeat: repeat;">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-12">
                                <form id="c_form-h" class="" method="post" action="/Home/Login">
                                    <div class="form-group row">
                                        <label for="Email" class="col-2 col-form-label">E-mail:</label>
                                        <div class="col-10">
                                            <input type="email" class="form-control" id="Email" name="Email" placeholder="mail@example.com" required>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label for="Password" class="col-2 col-form-label">Şifre:</label>
                                        <div class="col-10">
                                            <input type="password" class="form-control" id="Password" name="HashPassword" placeholder="Password" required>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  
</body>

</html>
