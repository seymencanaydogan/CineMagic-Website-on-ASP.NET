@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- PAGE settings -->
    <link rel="icon" href="https://templates.pingendo.com/assets/Pingendo_favicon.ico">
    <title>CineMagic</title>
    <meta name="description" content="Wireframe design of an album page by Pingendo">
    <meta name="keywords" content="Pingendo bootstrap example template wireframe album ">
    <meta name="author" content="Pingendo">
    <link rel="stylesheet" href="~/css/wireframe.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/wireframe.scss" asp-append-version="true" />
    <link rel="stylesheet" href="~/CineMagic.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous" style=""></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/Home">
                    <i class="fa d-inline fa-lg fa-circle-o"></i>
                    <b> CineMagic</b>
                </a> <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse" data-target="#navbar11">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbar11">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="">Anasayfa</a> </li>
                        <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="Hakkinda">Hakkında</a> </li>
                        <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="Filmler">Kategoriye Göre Filmler</a> </li>
                    </ul>
                    @if (HttpContextAccessor.HttpContext.User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Home" asp-action="Logout" method="post" class="form-inline my-2 my-lg-0">
                            <button type="submit" class="btn btn-link text-light" style="margin-right: 10px;">Çıkış Yap</button>
                        </form>
                    }

                    else
                    {
                            <a class="btn navbar-btn ml-md-2 btn-link" asp-controller="Home" asp-action="Login">Giriş Yap</a>
                            <a class="btn navbar-btn ml-md-2 btn-link" asp-controller="Home" asp-action="Register">Kayıt Ol </a>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="">
        <div class="py-3">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-6 p-3">
                        <h5> <b>CineMagic©</b> </h5>
          <ul class="list-unstyled">
                            <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="">Anasayfa</a> </li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="Hakkinda">Hakkında</a> </li>
                            <li class="nav-item"> <a class="nav-link" asp-controller="Home" asp-action="Filmler">Kategoriye Göre Filmler</a> </li>
          </ul>
        </div>
                    <div class="col-lg-4 col-6 p-3">
          <h5> <b>Hakkımızda</b> </h5>
                        <p class="mb-0" style="	background-image: linear-gradient(to bottom, rgba(0,0,0,0.2), rgba(0,0,0,0.8));	background-position: top left;	background-size: 100%;	background-repeat: repeat;	box-shadow: 0px 0px 4px  black;	text-shadow: 0px 0px 4px black;"> CineMagic, sinema tutkunlarının zengin bir sinema deneyimi yaşamalarını sağlamak için titizlikle seçilmiş ve güvenilir bilgiler sunar. Misyonumuz, herkesin sinemanın büyülü dünyasına adım atmasını sağlamak ve bu deneyimi paylaşmaktır.</p>
        </div>
                    <div class="col-lg-4 col-6 p-3">
          <h5> <b>Bizi Takip Edin!</b> </h5>
          <div class="row">
            <div class="col-md-12 d-flex align-items-center justify-content-between my-2"> <a href="/Home">
                <i class="d-block fa fa-facebook-official text-muted fa-lg mr-2"></i>
                                </a> <a href="/Home">
                <i class="d-block fa fa-instagram text-muted fa-lg mx-2"></i>
                                </a> <a href="/Home">
                <i class="d-block fa fa-google-plus-official text-muted fa-lg mx-2"></i>
                                </a> <a href="/Home">
                <i class="d-block fa fa-pinterest-p text-muted fa-lg mx-2"></i>
                                </a> <a href="/Home">
                <i class="d-block fa fa-reddit text-muted fa-lg mx-2"></i>
                                </a> <a href="/Home">
                <i class="d-block fa fa-twitter text-muted fa-lg ml-2"></i>
              </a> </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 text-center">
          <p class="mb-0 mt-2">© 2023-2024 CineMagic tüm hakları saklıdır.</p>
        </div>
      </div>
    </div>
  </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
